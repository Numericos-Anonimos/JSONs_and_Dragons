{
    "Humano": {
        "operations": [
            { "action": "SET", "property": "personal.race", "value": "Humano" },
            { "action": "SET", "property": "attributes.speed", "value": "9"},
            { "action": "SET", "property": "attributes.size", "value": "Médio"},  
            { "action": "IMPORT", "query": "features/name == 'Comum'"},
            {
                "action": "ADD_FEATURE",
                "name": "Idioma Adicional",
                "operations":[
                    {
                        "action": "CHOOSE_MAP", "n": 1, "label": "Idioma Adicional", 
                        "options": {"action": "REQUEST", "query": "base/idiomas/keys"},
                        "operations": [{"action": "IMPORT", "query": "features/name == '{THIS}'"}]
                    }
                ]
            },
            {      
                "action": "ADD_FEATURE",
                "name": "Subraça",
                "operations":[
                    {

                        "action": "CHOOSE_MAP", "n": 1, "label": "Subraça",
                        "options": {"action": "REQUEST", "query": "/subraca/Humano/keys"},
                        "operations": [{"action": "IMPORT", "query": "subraces/name == '{THIS}'"}]
                    }
                ]
            }
        ]
    },
    "Anão": {
        "operations": [
            { "action": "SET", "property": "personal.race", "value": "Anão" },
            { "action": "INCREMENT", "property": "attributes.con.score", "formula": 2 },
            { "action": "SET", "property": "attributes.speed", "value": "7.5"},
            { "action": "SET", "property": "attributes.size", "value": "Médio"},
            { "action": "IMPORT", "query": "features/name == 'Comum'"},
            { "action": "IMPORT", "query": "features/name == 'Anão'"},
            {
                "action": "ADD_FEATURE",
                "name": "Visão no Escuro",
                "description": "Você enxerga na penumbra a até 18 metros como se fosse luz plena, e no escuro como se fosse na penumbra."
            },
            {
                "action": "ADD_FEATURE",
                "name": "Resiliência Anã",
                "description": "Você tem vantagem em testes de resistência contra veneno e resistência contra dano de veneno."
            },
            {
                "action": "ADD_FEATURE",
                "name": "Treinamento de Combate Anão",
                "operations": [
                    { "action": "SET", "property": "proficiency.weapon.Machado de Batalha.multiplier", "value": 1 },
                    { "action": "SET", "property": "proficiency.weapon.Machadinha.multiplier", "value": 1 },
                    { "action": "SET", "property": "proficiency.weapon.Martelo Leve.multiplier", "value": 1 },
                    { "action": "SET", "property": "proficiency.weapon.Martelo de Guerra.multiplier", "value": 1 }
                ]
            },
            {
                "action": "ADD_FEATURE",
                "name": "Proficiência com Ferramentas",
                "operations": [
                    {
                        "action": "CHOOSE_MAP", "n": 1, "label": "Ferramenta de Artesão",
                        "options": ["Ferramentas de Ferreiro", "Suprimentos de Cervejeiro", "Ferramentas de Pedreiro"],
                        "operations": [{"action": "SET", "property": "proficiency.tool.{THIS}.multiplier", "value": 1}]
                    }
                ]
            },
            {
                "action": "ADD_FEATURE",
                "name": "Especialização em Rochas",
                "description": "Sempre que você realizar um teste de Inteligência (História) relacionado à origem de um trabalho em pedra, você é considerado proficiente na perícia História e adiciona o dobro do seu bônus de proficiência ao teste, ao invés do seu bônus de proficiência normal."
            },
            {      
                "action": "ADD_FEATURE",
                "name": "Subraça",
                "operations":[
                    {

                        "action": "CHOOSE_MAP", "n": 1, "label": "Subraça",
                        "options": {"action": "REQUEST", "query": "/subraca/Anão/keys"},
                        "operations": [{"action": "IMPORT", "query": "subraces/name == '{THIS}'"}]
                    }
                ]
            }
        ]
    },
    "Elfo": {
